generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" // ou "postgresql", "sqlite" dependendo do seu banco
  url      = env("DATABASE_URL")
}

model Student {
  id         Int      @id @default(autoincrement())
  nome       String
  sobrenome  String
  email      String   @unique
  idade      Int?
  peso       Float
  ativo      Boolean  @default(true)
  criadoEm   DateTime @default(now())

  imagem     Imagem?  @relation(fields: [imagemId], references: [id], onDelete: Cascade)
  imagemId   Int?     @unique
}

model Imagem {
  id       Int     @id @default(autoincrement())
  nome     String
  caminho  String

  student  Student?
}

model Users {
  id            Int      @id @default(autoincrement())
  nome          String
  email         String   @unique
  password_hash String
  criadoEm      DateTime @default(now())
}
